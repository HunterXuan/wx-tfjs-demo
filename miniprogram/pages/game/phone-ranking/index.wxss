/* pages/teachable-machine/index.wxss */
.cu-avatar.ranking {
  width: 240rpx;
  height: 240rpx;
  font-size: 4rem;
}

.bubble-bg {
  background-image: url(https://ai.flypot.cn/pocket/images/phone-ranking-bg.svg);
  background-size: cover;
  background-position: center;
}

@keyframes pulse-ring {
  0% {
    transform: scale(0.8);
  }
  80%, 100% {
    opacity: 0;
    transform: scale(1.1);
  }
}

.cu-avatar.ranking:after {
  content: "";
  border-radius: 100%;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform-origin: center center;
  box-shadow: 0 0 0 24rpx white;
  animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
}

.bg-img .cu-bar {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 20;
}

.scroll-friends-rank {
  max-height: 65vh;
}
